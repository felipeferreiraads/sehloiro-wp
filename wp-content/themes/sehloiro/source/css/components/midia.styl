.main-media
    padding: 100px 0 100px 100px
    +below($bp.lg)
        padding: 100px 20px
    .top
        width: 100%
        max-width 1280px
        padding: 0 20px 0 0
        +below($bp.lg)
            padding: 0
    .grid
        display flex
        justify-content: space-between
        align-items: center
        +below($bp.sm)
            flex-direction: column
            justify-content: center
            .button
                align-self: center !important
    .logo
        display flex
        align-items: center
        +below($bp.sm)
            justify-content: center
        img
            width: 300px
            align-self: flex-start
            +below($bp.lg)
                width: 200px
            +below($bp.lg)
                width: 150px
        span
            font-size: 35px
            font-style: italic
            letter-spacing: 5px
            margin-left: 5px
            +below($bp.lg)
                font-size: 25px
            +below($bp.sm)
                font-size: 20px

    a.button
        display inline-block
        line-height: 50px
        padding: 0 15px
        background: $color.text
        color white
        font-weight: 800
        text-transform: uppercase
        transition: .2s
        align-self: flex-start
        +below($bp.lg)
            line-height: 40px
            font-size: 16px
        +below($bp.md)
            margin-top: 20px
        &:hover
            opacity: .85
        span
            &:first-child
                font-size: 20px
                margin-right: 5px
    p
        font-size: 25px
        margin-top: 30px
        font-style: italic
        +below($bp.md)
            font-size: 20px
        +below($bp.sm)
            text-align: center
            margin-top: 20px

.media-posts
    margin-top 40px
    +above($bp.lg)
        display: flex
        flex-wrap: nowrap
        overflow-x: auto
        .column
            margin-right: 50px

.card-media
    width: 400px
    display block
    white-space: normal
    margin-bottom: 20px
    +below($bp.lg)
        width: 100%
    h3
        font-size: 22px
        color: $color.primary
        font-weight: 800
        text-transform: uppercase
        margin-bottom: 10px
        line-height: 1.4
        +below($bp.lg)
            font-size: 18px
    figure
        width: 100%
        height: 110px
        img
            width: 100%
            height: 100%
            object-fit: cover
            object-position: center