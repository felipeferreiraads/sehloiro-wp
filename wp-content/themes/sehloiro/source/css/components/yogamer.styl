.main-yogamer
    padding: 100px
    +below($bp.lg)
        padding: 100px 0 50px
    .top
        display: flex
        justify-content: space-between
        margin-bottom: 70px
        +below($bp.sm)
            flex-direction: column
            .logo
                max-width: 200px
                margin-bottom: 20px
                +below($bp.sm)
                    margin: 0 auto
                    margin-bottom: 15px
                img
                    width: 100%
            h1
                text-transform: uppercase
                letter-spacing: 5px
                +below($bp.lg)
                    font-size: 22px
                    text-align: center
                    margin-bottom: 15px
            figure
                width: 110px
                margin: 0 auto
                img
                    width 100%
        +above($bp.sm)
            .logo
                max-width: 250px
                margin-bottom: 20px
                img
                    width: 100%
            h1
                font-size: 25px
                font-weight: 600
                text-transform: uppercase
                letter-spacing: 5px
            figure
                width: 120px
                img
                    width: 100%
    .text
        p
            &:not(:first-child)
                margin-top: 15px
        ul
            line-height: 1.5
            list-style-type: number
            li
                margin-bottom: 15px
    .form
        margin-top: 50px
        h2
            text-transform: uppercase
            font-size: 25px
            letter-spacing: 5px
            font-weight: 600
            margin-bottom: 20px
        p
            font-weight: 300
            margin-bottom: 20px
    .column
        margin-bottom: 30px
        > *
            margin-top: 20px